<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity">

    <Button
        android:id="@+id/goToAddStatsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToAddStatsActivity"
        android:text="Go To Add Stats"
        app:layout_constraintBottom_toTopOf="@+id/goToLogActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToLogActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToLogActivity"
        android:text="Go to Log Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToAddStatsActivity" />

    <Button
        android:id="@+id/goToPreviousActivityID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToPrevActivity"
        android:text="Go Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToLogActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>